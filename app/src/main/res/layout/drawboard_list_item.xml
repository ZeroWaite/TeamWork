<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_drawBoardName_drawBoard_item"
            android:src="@drawable/pink_back"
            android:clickable="true"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/board_edit"
            android:src="@drawable/ediit"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_board_share"
            android:src="@mipmap/shares"
            android:clickable="true"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <TextView
            android:id="@+id/tv_board_name"
            android:layout_width="match_parent"
            android:text="board_name"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_board_descrip"
        android:layout_width="match_parent"
        android:text="board_descrip"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_height="wrap_content" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/board_head"
        android:src="@mipmap/headview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/user_name"
      android:text="user_name"
       android:layout_marginTop="18dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/gather_num"
        android:text="0采集"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/concern_num"
        android:text="0关注"
        android:layout_margin="18dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <GridView
        android:layout_margin="5dp"
        android:id="@+id/gv_collectList_collect"
        android:background="#dbd9d9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2">


    </GridView>
</LinearLayout>
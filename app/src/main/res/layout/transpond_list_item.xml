<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_interImage_transPond_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:placeholderImage="@null" />



    <TextView
        android:id="@+id/tv_drawBoard_transPond_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_interImage_transPond_item"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="画板名" />

    <TextView
        android:id="@+id/tv_username_transPond_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/tv_drawBoard_transPond_item"
        android:layout_below="@+id/tv_drawBoard_transPond_item"
        android:text="用户名" />

    <LinearLayout
        android:layout_below="@+id/tv_username_transPond_item"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_follow_transPond_item"
            android:text="266"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_follow_transPond_item"
            android:layout_width="wrap_content"
            android:text="+关注"
            android:background="#ffffff"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>
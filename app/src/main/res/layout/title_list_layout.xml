<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_back_onTitle"
                android:layout_width="wrap_content"
                android:text="back"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_title_onTitle"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:text="TITLE"
                android:layout_height="wrap_content" />
        </LinearLayout>


    <RadioGroup
        android:id="@+id/rg_title_onTitle"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_collect_onTitle"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:text="采集"
            android:gravity="center"
            android:button="@null"
            android:padding="10dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_board_onTitle"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:text="画板"
            android:gravity="center"
            android:button="@null"
            android:padding="10dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_users_onTitle"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:text="用户"
            android:gravity="center"
            android:button="@null"
            android:padding="10dp"
            android:layout_height="wrap_content" />

    </RadioGroup>


    <android.support.v4.view.ViewPager
        android:background="#dbd9d9"
        android:id="@+id/vp_onTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


    </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFF0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <ImageView
      android:id="@+id/iv_loading_back"
      android:src="@mipmap/x"
      android:layout_margin="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
      <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:text="登录"
          android:textColor="#000000"
          android:layout_margin="10dp"
          android:textSize="26sp"
          android:layout_height="wrap_content" />
  </LinearLayout>
  <TextView
      android:id="@+id/tv_loading_hint"
      android:text="天狗账号登录"
      android:textSize="20sp"
      android:layout_margin="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
   <EditText
       android:id="@+id/et_mailbox_phone"
       android:hint="手机号码"
       android:layout_margin="15dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_loading_password"
        android:hint="密码"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_loadingButton"
        android:layout_width="match_parent"
        android:background="#B22222"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_margin="20dp"
        android:layout_height="wrap_content" />
 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:layout_height="wrap_content">
     <Button
         android:id="@+id/bt_forgetPsw"
         android:text="忘记密码？"
         android:layout_marginLeft="15dp"
         android:textColor="#87CEEB"
         android:background="#FFFFF0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <Button
         android:id="@+id/bt_phone_regist"
         android:text="忘记密码？"
        android:layout_marginLeft="170dp"
         android:textColor="#87CEEB"
         android:background="#FFFFF0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
 </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/relative"
    android:background="#FFFFF0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_regist_back"
            android:src="@mipmap/backy"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_regist_rg"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="31sp"
            android:layout_toRightOf="@+id/iv_regist_back"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_regist_next"
            android:text="下一步"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

   <TextView
       android:layout_width="wrap_content"
       android:text="请输入你的手机号"
       android:textSize="20sp"
       android:layout_gravity="center"
       android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_regist_boxPhone"
        android:layout_width="match_parent"
        android:hint="手机号码"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content" />
</LinearLayout>
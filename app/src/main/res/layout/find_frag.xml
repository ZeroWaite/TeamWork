<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#DCDCDC"
    android:animateLayoutChanges="true"
    android:id="@+id/layout_find_animotion"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:background="#FAFFF0"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="发现"
                android:textSize="25sp"
                android:textColor="#000000"
                 android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/ib_find_menu"
                android:src="@drawable/menu1"
                android:padding="5dp"
                android:background="#ffffff"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_horizon_onFind"
        android:layout_width="match_parent"
        android:drawSelectorOnTop="true"
        android:layout_height="100dp"
        android:layout_margin="5dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:text="发现采集"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/demo_title_onFind"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <android.support.v7.widget.RecyclerView
            android:padding="1dp"
            android:background="#ff74a3"
            android:id="@+id/rv_vertical_onFind"
            android:layout_width="match_parent"
            android:drawSelectorOnTop="true"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>




</LinearLayout>
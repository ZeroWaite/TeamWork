<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/iv_userHead_comment_item"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:src="@mipmap/ic_launcher"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_username_commit_item"
        android:text="username"
        android:layout_toRightOf="@id/iv_userHead_comment_item"
        android:layout_alignTop="@+id/iv_userHead_comment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_content_commit_item"
        android:text="content......................................................"
        android:layout_toRightOf="@id/iv_userHead_comment_item"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_username_commit_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_upDataTime_comment_item"
        android:text="12天前........."
        android:layout_toRightOf="@id/iv_userHead_comment_item"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_content_commit_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
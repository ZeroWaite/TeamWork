<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#e0e0e0">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_interImage_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:placeholderImage="@null" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <TextView
        android:id="@+id/tv_image_introduce_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="this is the introduce of image"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:id="@+id/ll_threeData"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
    <TextView
        android:drawableLeft="@mipmap/rep"
        android:id="@+id/tv_transPond_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:drawablePadding="5dp"
        android:text="0"

        android:textSize="12sp" />

    <TextView
        android:drawableLeft="@drawable/like_black"
        android:id="@+id/tv_collect_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawablePadding="5dp"
        android:textColor="#000000"
        android:text="0"
        android:textSize="12sp" />

    <TextView
        android:drawableLeft="@mipmap/comment"
        android:id="@+id/tv_comment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawablePadding="5dp"
        android:textColor="#000000"
        android:text="0"
        android:textSize="12sp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_userMsg_home"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:clickable="true"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_userHead_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:roundedCornerRadius="20dp"
            fresco:placeholderImage="@null" />

        <TextView
            android:id="@+id/tv_username_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:layout_alignTop="@+id/iv_userHead_home"
            android:layout_toRightOf="@id/iv_userHead_home"
            android:text="用户名" />

        <TextView
            android:id="@+id/tv_userDrawBoard_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username_home"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/iv_userHead_home"
            android:text="用户画板" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
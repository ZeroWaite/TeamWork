<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib_back_transPonds"
            android:layout_width="wrap_content"
            android:background="@mipmap/cancel"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_margin="6dp"
            android:text="编辑画板"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_save_edit"
            android:layout_width="wrap_content"
            android:background="#ffffff"
            android:src="@drawable/dg"
            android:clickable="true"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <EditText
        android:id="@+id/ed_borad_name"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:background="#e7e6e6"
        android:hint="画板名称"
        android:layout_height="30dp" />
    <TextView
        android:text="描述"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ed_borad_descripthion"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:background="#e7e6e6"
        android:hint="画板描述"
        android:layout_height="60dp" />
    <TextView
        android:text="分类"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<LinearLayout
    android:id="@+id/ll_choose_kind"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ed_classify"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:background="#F8F8FF"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_weight="1"
        android:padding="10dp"
        android:hint="选择分类"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/triangle"
        android:clickable="true"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>
    <Button
        android:id="@+id/bt_delete_board"
        android:layout_margin="10dp"
        android:text="删除画板"
        android:textColor="#FFEC8B"
        android:background="#FFFAF0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFF0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_loading_back"
            android:src="@mipmap/x"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完善账户"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="26sp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="         "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="验证您的手机号并完善账号"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="当前使用的手机号码"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
<EditText
    android:id="@+id/et_authcoad"
    android:layout_width="wrap_content"
    android:hint="短信验证码"
    android:textSize="23sp"
    android:background="#FFFAF0"
    android:layout_margin="20dp"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_resend"
        android:text="重新发送"
        android:background="#FFDAB9"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/et_authcoad"
        android:layout_toRightOf="@+id/et_authcoad"
         android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/et_regist_password"
        android:layout_width="match_parent"
        android:layout_below="@+id/et_authcoad"
        android:layout_margin="20dp"
        android:hint="密码(大于6位的字母和数字)"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_regist_name"
        android:layout_width="match_parent"
        android:layout_below="@+id/et_regist_password"
        android:layout_margin="20dp"
        android:hint="昵称"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_regist_sure"
        android:layout_width="match_parent"
        android:layout_below="@+id/et_regist_name"
        android:layout_margin="20dp"
        android:text="确定"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#B22222"
        android:layout_height="wrap_content" />
</RelativeLayout>

</LinearLayout>
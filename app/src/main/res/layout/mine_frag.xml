<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFFF0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ib_search_person"
            android:layout_width="wrap_content"
            android:background="#FAFFF0"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/searcg" />

        <ImageButton
            android:id="@+id/ib_setup_person"
            android:layout_width="wrap_content"
            android:background="#FAFFF0"

            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/set" />

        <ImageButton
            android:id="@+id/iv_add_person"
            android:layout_width="wrap_content"
            android:background="#FAFFF0"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/add" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_avatar_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/headview" />

        <TextView
            android:id="@+id/tv_name_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_avatar_person"
            android:layout_toRightOf="@+id/iv_avatar_person"
            android:text="用户名" />

        <TextView
            android:id="@+id/tv_dangmyeon_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name_person"
            android:layout_below="@+id/tv_name_person"
            android:text="粉丝>"
            android:textSize="15dp" />

    </RelativeLayout>






        <RadioGroup

            android:id="@+id/rg_1"
            android:layout_width="match_parent"
           android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/rb_plate"
                style="@style/fg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:text="画板"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/rb_gather"
                style="@style/fg"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:text="采集"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/rb_like"

                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/fg"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:text="喜欢"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/rb_concern"
                android:layout_width="0dp"

                style="@style/fg"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:text="关注"
                android:textSize="18dp" />
        </RadioGroup>
        <FrameLayout
            android:id="@+id/fg_minePage2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>



</LinearLayout>
